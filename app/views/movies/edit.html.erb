

<%= form_with id: 'modelForm', model: @movie do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, class: 'form-control' %>
  <%= form.label :url %>
  <%= form.text_field :url, class: 'form-control' %>
  <%= form.label :description %>
  <%= form.text_field :description, class: 'form-control' %>
  <%= form.label :tagline %>
  <%= form.text_field :tagline, class: 'form-control' %>
  <%= form.label :year %>
  <%= form.text_field :year, class: 'form-control' %>
  <%= form.label :country %>
  <%= form.text_field :country, class: 'form-control' %>
  <%= form.label :world_premier %>
  <%= form.text_field :world_premier, class: 'form-control' %>
  <%= form.label :budget %>
  <%= form.text_field :budget, class: 'form-control' %>
  <%= form.label :fees_in_usa %>
  <%= form.text_field :fees_in_usa, class: 'form-control' %>
  <%= form.label :fees_in_world %>
  <%= form.text_field :fees_in_world, class: 'form-control' %>
  <%= form.label :category_id %>
  <%= form.text_field :category_id, class: 'form-control' %>
  <%= form.label :draft %>
  <%= form.text_field :draft, class: 'form-control' %>

  <%= form.collection_check_boxes :genre_ids, Genre.all, :id, :name, checked: @movie.genre_ids, include_hidden: false do |cb| %>
    <%= cb.check_box %>
    <%= cb.label %>
  <% end %>

  <%= form.collection_check_boxes :actor_ids, Actor.all, :id, :name, checked: @movie.actor_ids, include_hidden: false do |cb| %>
    <%= cb.check_box %>
    <%= cb.label %>
  <% end %>

  <%= form.collection_check_boxes :director_ids, Director.all, :id, :name, checked: @movie.director_ids, include_hidden: false do |cb| %>
    <%= cb.check_box %>
    <%= cb.label %>
  <% end %>
   <%= form.submit %>
<% end %>
