

<%= form_with id: 'modelForm', model: @movie_short do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, class: 'form-control' %>
  <%= form.label :image %>
  <%= form.text_field :image, class: 'form-control' %>
  <%= form.label :description %>
  <%= form.text_field :description, class: 'form-control' %>
  <%= form.label :movie_id %>
  <%= form.text_field :movie_id, class: 'form-control' %>

   <%= form.submit %>
<% end %>
