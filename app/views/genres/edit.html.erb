

<%= form_with id: 'modelForm', model: @genre do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control' %>
  <%= form.label :url %>
  <%= form.text_field :url, class: 'form-control' %>
  <%= form.label :description %>
  <%= form.text_field :description, class: 'form-control' %>

   <%= form.submit %>
<% end %>
