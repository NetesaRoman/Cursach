<div>

  <div>

    <h2>Name:</h2>
    <p><%= @genre.name %></p>
    <h2>Url:</h2>
    <p><%= @genre.url %></p>
    <h2>Id:</h2>
    <p><%= @genre.id %></p>
    <h2>Description:</h2>
    <p><%= @genre.description %></p>



  </div>
